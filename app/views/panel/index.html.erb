<h1>Your drafts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Picture</th>
      <th>Context</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drafts.each do |book| %>
    <tr>

      <td><%= book.name %></td>
      <td><%= book.author %></td>

      <td> <%= link_to book_path(book) do %>
      <%= image_tag(book.picture, :width=>50) %>
      <% end %> </td>

      <td><%= book.context %></td>
      <td>
      <div class="btn btn-default">
        <%= link_to 'Show', book %>
      </div></td>
      <td>
      <div class="btn btn-warning">
        <%= link_to 'Edit', edit_book_path(book) %>
      </div></td>
      <td>
      <div class="btn btn btn-danger">
        <%= link_to 'Destroy', book, method: :delete %>
      </div></td>
    </tr>
    <% end %>
  </tbody>
</table>

