<%= form_for @book, :html=>{:multipart=>true} do |f| %>
<%= errors @book %>

<div class="field">
  <%= f.label :name %>
  <br>
  <%= f.text_field :name, class: "form-control" %>


</div>
<div class="field">
  <%= f.label :author %>
  <br>
  <%= f.text_field :author, class: "form-control" %>
</div>
<div class="field">
  <%= f.label :picture %>
  <br>
  <%= f.file_field :picture, class: "form-control" %>
</div>
<div class="field">
  <%= f.label :context %>
  <br>
  <%= f.text_area :context, class: "form-control" %>
</div>
<div class="field">
  <%= f.label :is_draft %>
  <br>
  <%= f.check_box :is_draft, class: "check-box" %>
</div>

<% @genres = Genre.all %>
<% @connections = BookGenre.where(book_id: @book.id)  %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">
      </th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td> <%= genre.name %> </td>
      <td>
      <%= hidden_field_tag "genre[#{genre.id}]", "0" %>
      <%= check_box_tag "genre[#{genre.id}]", "1", (@connections.select {|conn| conn.genre_id == genre.id}.length > 0), class: "check-box" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="actions">
  <%= f.submit class: "btn btn-lg btn-primary btn-block" %>
</div>

<% end %>
