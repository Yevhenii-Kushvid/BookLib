

<div class="row">
  <div class="col-xs-12">
    <p id="notice">
      <%= notice %>
    </p>
  </div>
  <div class="col-xs-12">
    <h1><%= @book.name %> </h1>
  </div>
  <div class="col-xs-12">

    <div class="col-xs-6">
      <p>
        <%= image_tag(@book.picture_url, :width=>300) if @book.picture.present? %>
      </p>
    </div>
    <div class="col-xs-6">
      <p>
        <strong>Author:</strong>
        <%= @book.author %>
      </p>

      <p>
        <strong>Context:</strong>
        <%= @book.context %>
      </p>

      <p>
        <strong>Is draft:</strong>
        <%= @book.is_draft %>
      </p>

      <%= puts @connections = BookGenre.where(book_id: @book.id)  %>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @connections.each do |conn| %>
          <tr>
            <td> <%= Genre.find(conn.genre_id).name %> </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="btn btn-default">
        <%= link_to 'Back', books_path %>
      </div>

      <% if current_user == @book.user %>
      <div class="btn btn-default">
        <%= link_to 'Edit', edit_book_path(@book) if current_user == @book.user %>
      </div>
      <div class="btn btn-default">
        <%= link_to 'Add Quote', new_book_quote_path(@book)  %>
      </div>
      <div class="btn btn-default">
        <%= link_to 'Add Quote', new_book_quote_path(@book)  %>
      </div>
      <% end %>

        <div class="row">
          <div class="col-xs-12">
            <% @quotes.each do |quote| %>
              <hr/><%= link_to quote.text, book_quote_path(@book, quote) %><hr/>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
